<!DOCTYPE html>
<html lang="tr">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CargoSystem</title>

	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CargoSystem.Web.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom border-secondary box-shadow mb-3 py-3">
			<div class="container">
				<a class="navbar-brand d-flex align-items-center fw-bold text-white" asp-area="" asp-controller="Home"
					asp-action="Index">
					<i class="bi bi-truck-front-fill me-2 fs-4 text-primary"></i> <span>CargoSystem</span>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
					aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white-50 hover-text-white" asp-area="" asp-controller="Home"
								asp-action="Index">
								<i class="bi bi-house-door me-1"></i> Ana Sayfa
							</a>
						</li>
						<li class="nav-item ms-lg-auto">
							<a class="btn btn-sm btn-outline-primary" asp-controller="Admin" asp-action="Index">
								<i class="bi bi-gear-fill me-1"></i> Yönetici Paneli
							</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3 fade-in">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>

	<script>
		$(document).ready(function () {
			$(".fade-in").hide().fadeIn(800);
		});
	</script>

	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>